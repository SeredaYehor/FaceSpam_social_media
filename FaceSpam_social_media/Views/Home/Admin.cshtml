@model UsersManagment

@{
    ViewData["Title"] = "Friends page";

    string[] controllers = { "Main", "Messages", "Groups", "Games", "Shop", "Settings" };
}

<script src="/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript"></script>
<script type="text/javascript" src="~/scripts/AdminFormScripts.js" asp-append-version="true"></script>

<body>
    <link rel="stylesheet" href="~/css/FriendsViewStyleSheet.css" asp-append-version="true" />
    <link href="~/css/Navigation.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/BackgroundAnimationStyle.css" rel="stylesheet" asp-append-version="true" />
    
    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>
    <div class="Wrapper">
        <div class="Navigation">
            @foreach (string controller in controllers)
            {
                @using (Html.BeginForm(controller, "Home", FormMethod.Post))
                {
                    <input type="submit" class="Button" value=@controller />
                }
            }
            @using (Html.BeginForm("Admin", "Home", FormMethod.Post))
            {
                <input type="submit" class="Button" value="Admin" />
            }
            <div class="AdvertisementText">
                Advertisement
            </div>

            <div>
                <div class="AdvertisementImage">
                    <img src="~/Images/AdvertisementTest.png" />
                </div>
            </div>
        </div>

        <div class="Board">
            <div class="SearchZone">
                <div style="display: flex; flex-direction: row; margin-top: 10px; background-color: #3485FF;">
                    <b> <label class="FriendsLabel">Users: &nbsp; </label> </b>

                    <form action="SearchFriend">
                        <div style="position: relative; margin-left: 160px">
                            <input type="text" name="name" class="Search" placeholder="Search" />
                            <img src="~/Images/glass-icon.png" class="SearchImage" />
                        </div>
                    </form>

                </div>

                <div class="Line"></div>

                <div class="FriendZone">
                    <div>
                        @foreach (var user in Model.users)
                        {
                            <div id="@user.Name" class="FriendLine" style="display: flex; align-items: center; flex-direction: row">
                                <button class="EnterUserProfile" type="submit" name="id" value="@user.UserId">
                                    <img class="UserImage" src="@user.ImageReference" />
                                    <label class="Names"> @user.Name </label>
                                    @if (user.IsBanned == true)
                                    {
                                        <input id="@user.UserId" type="submit" class="FriendButton" value="Unban" onclick="DeleteFriend(this)" />

                                    }
                                    else
                                    {
                                        <input id="@user.UserId" type="submit" class="FriendButton" value="Ban" onclick="DeleteFriend(this)" />
                                    }
                                    @*Write button does not work. When all formls will be ready it will get the link*@
                                    <input type="submit" class="FriendButton" value="Write" />
                                </button>                     
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
